{
  "name": "@birchill/kanji-component-string-utils",
  "version": "1.0.1",
  "description": "Serialization/deserialization of kanji component information",
  "author": "Birchill, Inc.",
  "scripts": {
    "build": "tsup",
    "verify": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "husky && tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birchill/kanji-component-string-utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/birchill/kanji-component-string-utils/issues"
  },
  "files": [
    "dist/**"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/birchill/kanji-component-string-utils#readme",
  "devDependencies": {
    "@release-it/conventional-changelog": "10.0.0",
    "@types/node": "22",
    "husky": "9.1.7",
    "knip": "5.46.4",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "release-it": "18.1.2",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.1.1",
    "vitest-github-actions-reporter": "0.11.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
